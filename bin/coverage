#!/bin/bash

bin="`dirname "$0"`"
ROOT_DIR="`cd "$bin/../"; pwd`"

# by default run bin/python from venv
WHICH_PYTHON="$ROOT_DIR/bin/python"

# Command-line options for start-up:
for i in "$@"; do
  case $i in
    --python=*)
      WHICH_PYTHON="${i#*=}"
    shift ;;
  esac
done

if [ -z "$WHICH_PYTHON" ]; then
  echo "No python binaries provided, use --python=* to specify"
  exit 1
fi

# run unit-tests and generate report
$WHICH_PYTHON $ROOT_DIR/run_coverage.py run --branch --source=src run_tests.py && \
  $WHICH_PYTHON $ROOT_DIR/run_coverage.py report -m
